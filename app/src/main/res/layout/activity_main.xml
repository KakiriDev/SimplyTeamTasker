<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ff7400">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:layout_rowSpan="2" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:paddingLeft="8dp"
            android:text="dsjdkjhhshjdfdj"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#ff7400"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:paddingLeft="8dp"
            android:text="dasdasdasdasdasd"
            android:textStyle="bold|italic"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#ff7400"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/buttonJoinGroup"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_gravity="center_vertical|end"
            android:paddingRight="15dp"
            android:layout_marginRight="20dp"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:background="@drawable/search_group" />

        <ImageButton
            android:id="@+id/buttonCreateGroup"
            android:scaleType="fitXY"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:layout_marginRight="20dp"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:background="@drawable/add_group" />

        <ImageButton
            android:id="@+id/buttonLogout"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="5"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:background="@drawable/logout_ico" />

    </GridLayout>
    <ListView
        android:paddingTop="20dp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"/>
</LinearLayout>